<% end %>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Description</th>
    <th class="center">Quantity</th>
    <th class="center">Price</th>
    <th class="center">Action</th>
  </tr>
  <% @products.each do |product| %>
   <tr>
      <td class="center"><%= image_tag product.image.url(:thumb) %></td>
      <td class="center"><%= product.name %></td>
      <td class="center"><%= product.description %></td>
      <td class="center"><%= product.quantity %></td>
      <td class="center"><%= number_to_currency(product.price, unit: 'â‚¬') %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", product, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_product_path(product), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

