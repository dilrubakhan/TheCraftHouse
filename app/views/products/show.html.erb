<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%#= image_tag @product.image.url(:medium) %>
    </div>
  </div>
  <div class="row">
  <div class="col-md-6">
   <div class="thumbnail">
   <div class="center">
      <h2><b><%= @product.name %></b></h2>
      <div class="star-rating" data-score= <%= @avg_rating %> ></div>
       <p><%= "#{@reviews.length} reviews" %></p>
      <p><%=number_to_currency(@product.price, unit: 'â‚¬')%></p>
      <p><%= @product.description %></p>
    </div>
    <br>
   <br>

  </div>
</div>
   </div>
   <div class="center">
   <% if @product.quantity == 0 %>
   This product is not available now come back soon.
   <% else %>
     <%= form_tag( cart_path+"/#{@product.id}", method: "get" ) do %>
     <%= select_tag "quantity", options_for_select(Array(1..@product.quantity), "1")%>

          <%= submit_tag "Add To Cart" %>
    <% end %>
  <% end %>
    </div>
   </div>
</div>

<%=link_to "Write a Review", new_product_review_path(@product), class: "btn btn-primary"%>
<br><br>

<div class="well">
<% if @reviews.blank? %>
  <h3>No reviews yet. Be the first to write one!</h3>
<% else %>

      <table class="table">
        <tbody>
           <% @reviews.each do |review| %>
           <tr>
           <td>
             <div class="star-rating" data-score= <%=review.rating %>></div>
             <p>  <%=h(review.comment).gsub(/\n/, '<br/>').html_safe%> </p>
           </td>

           </tr>
         <% end %>
        </tbody>
      </table>
  <% end %>
</div>
</div>



<% if current_user == @product.user %>
  <%= link_to edit_product_path(@product), class:"btn btn-warning" do %>
      <i class= "glyphicon glyphicon-scissors"></i> Edit Product
    <% end -%>
<% end %>
<%= link_to 'Back', products_path, class:"btn btn-link"%>

<script>
  $('.star-rating').raty({
    path:  'https://s3.amazonaws.com/yelpdemo/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>
